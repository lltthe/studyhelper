<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lamlethanhthe.studyhelper.NoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_voice_black_48dp"
            android:id="@+id/imgNoteVoiceSearch"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtNoteSearch"
            android:hint="@string/hint_search"
            android:layout_weight="9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/imgNoteLess"
            android:layout_weight="1"
            android:src="@mipmap/ic_expand_less_black_48dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/imgNoteMore"
            android:layout_weight="1"
            android:src="@mipmap/ic_expand_more_black_48dp"/>

        <ImageView
            android:id="@+id/imgNoteAdd"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@mipmap/ic_note_add_black_48dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/imgNoteDel"
            android:src="@mipmap/ic_delete_black_48dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_sort_black_48dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <Spinner
            android:id="@+id/spnNoteSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Spinner>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_filter_black_48dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnNoteFilter"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp">
        </Spinner>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expLvNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ExpandableListView>

</LinearLayout>
